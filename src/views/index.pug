//-Layout Base
extends ../templates/base.pug

//-Etiqueta Title
block title
	title Circo Rexona

//-Etiqueta Metadescription
block description
	meta(name="description", content="Circo Rexona Index" )


block content
	
	section.container-fluid.registro
		div.row
			div.rexona-logo
				+image('circo-rexona-logo-min.png', 'Circo Rexona')

			div.rexona-titulo
				h3.
					Juega y gana boletas dobles para el Show Séptimo Día del Cirque Du Soleil.
			div.redes-enviar.separador
				div.redes-face
					input(type="submit" value="CONECTAR CON FACEBOOK")
				
			form#registro-index
				div.campos-registo.separador
						div.row
							div.input
								label(for="mail")
									|Mail
								input(type="email" id="mail" name="mail")
							div.input
								label(for="contrasena")
									|Contraseña
								input(type="password" id="contrasena" name="contrasena")
				div.botones-registro
					div.enviar.home.separador
						button(type="button" ) LOGIN
					div.enviar.link-registro.separador
						button(type="button") REGÍSTRATE
			div.image-juego
				+image('escenario-01.png', 'Juego 1')



	
	

